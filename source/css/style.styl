@import "nib"
@import "_variables"
@import "_extend"
@import "fontAwesome.css"

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

global-reset()

body
    color: #666
    font: font-size font-sans
    -webkit-text-size-adjust: 100%
    background: #f8fbf8

a
    color: #666
    text-decoration: none
    &:hover
        color: #e60033

.g-content
    padding: 32px 48px

//Aside
.m-aside
    position: fixed
    left: 0
    top: 0
    bottom: 0
    width: aside-width
    background: aside-bg-color
    text-align: center
    color: #fff
    a
        color: #fff
    .main
        padding-top: 160px
    .username
        font-size: 32px
        line-height: 72px
    .motto
        margin-bottom: 12px
    .social-links
        a
            margin: 0 2px
    .footer
        position: absolute
        left: 0
        right: 0
        bottom: 20px
        line-height: 20px
        a
            &:hover
                text-decoration: underline
    @media screen and (min-width: media-min-width) and (max-width: media-max-width)
        width: aside-percentage
    @media screen and (max-width: media-min-width)
        position: static
        margin-top: menu-height
        width: 100%
        .main
            padding: 28px 0 32px 0
        .footer
            display: none


//Content
.m-content
    position: absolute
    left: aside-width
    top: menu-height
    right: 0
    bottom: 0
    @media screen and (min-width: media-min-width) and (max-width: media-max-width)
        left: aside-percentage
    @media screen and (max-width: media-min-width)
        position: static
        .g-content
            padding: 20px

.m-article
    .index-article
        margin-bottom: 24px
    .article-title
        font-size: 22px
    .article-content
        margin: 20px 0 16px 0
        @extend $base-style
    .article-footer
        clearfix()
        padding-bottom: 20px
        border-bottom: 1px solid #e3e3e3
        font-size: 12px
        .iconfont
            margin-right: 4px
    .article-nav
        clearfix()
        line-height: 48px
        .prev
            float: left
        .next
            float: right
    .article-footer-item
        margin-right: 16px
    .article-tag-list
        float: left
        li
            float: left
            margin-right: 8px
    .archive-year
        font-size: 20px
        margin-bottom: 32px
    .archive-article
        overflow: hidden
        margin-bottom: 16px
        .title
            float: left
        .date
            float: right

.m-menu
    position: fixed
    left: aside-width
    top: 0
    right: 0
    height: menu-height
    //background: #e59f63
    background: menu-bg-color
    color: #fff
    z-index: 1
    ul
        clearfix()
        padding-left: 48px
        li
            float: left
            a
                -webkit-transition: all .2s
                transition: all .2s
                display: block
                margin-right: 32px
                line-height: menu-height
                text-align: center
                color: #fff
                &:hover
                    text-shadow: 1px 1px 2px #c9171e
            .current
                text-shadow: 1px 1px 2px #c9171e
    @media screen and (min-width: media-min-width) and (max-width: media-max-width)
        left: aside-percentage
    @media screen and (max-width: media-min-width)
        left: 0
        top: 0
        ul
            padding-left: 20px

.m-sort
    h3
        font-size: 20px
        margin-bottom: 18px
    .sort-item
        margin-bottom: 32px
    .title
        margin-bottom: 12px

//Pagination
.m-pager
    margin: 0 auto
    text-align: center
    a
        margin: 0 6px
    .iconfont
        margin-right: 6px
    .icon-caret-right
        margin: 0 0 0 6px
    .disabled
        cursor: default
        color: #aaa

